<div class="row">
  <div class="col-lg-12">
    <ol class="ember-view breadcrumbs breadcrumb">
      <li class="first current">
        {{#link-to 'admin.index'}}home{{/link-to}}
      </li>
      <li class="first current">
        {{#link-to 'theme.themesList'}}themes{{/link-to}}
      </li>
    </ol>
  </div>

  <div class="col-lg-12">
    <h1 class="page-header">Theme - {{record.projectThemeName}}</h1>
    <p>Npm module: {{record.name}}</p>
  </div>

  <div class="col-lg-12">
    <h4>Layouts</h4>
    <ul class="nav nav-pills">
      {{#each record.layouts}}
        <li role="presentation">
          {{#link-to 'widget.updateThemeLayout' ../record.projectThemeName @key}}{{@key}}{{/link-to}}
        </li>
      {{/each}}
    </ul>
  </div>
</div>