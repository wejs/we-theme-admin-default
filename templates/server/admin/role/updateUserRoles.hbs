<form method="POST">
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>&nbsp;</th>
      <th>{{t 'name'}}</th>
    </tr>
  </thead>
  <tbody>
  {{#each rolesTable}}
    <tr>
      <td>
        <input type="checkbox" name="userRoles" value="{{id}}" {{#if checked}}checked{{/if}} >
      </td>
      <td>{{name}}</td>
    </tr>
  {{/each}}
  </tbody>
  <tfoot>
    <tr>
      <td>
        <button class="btn btn-primary">{{t 'save'}}</button>
        {{we-action-view-btn 'admin.user' record req record.id}}
      </td>
    </tr>
  </tfoot>
</table>

{{#if redirectTo}}
  <input name="redirectTo" type="hidden" value="{{redirectTo}}">
{{/if}}
</form>