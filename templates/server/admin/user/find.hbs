<ul class="nav nav-tabs">
  <li role="presentation" class="active">
    {{#link-to 'admin.user.find'}}{{t 'user.find'}}{{/link-to}}
  </li>
  <li role="presentation">
    {{#link-to 'admin.role.find'}}{{t 'role.find'}}{{/link-to}}
  </li>
  <li role="presentation">
    {{#link-to 'permission_manage'}}{{t 'permission_manage'}}{{/link-to}}
  </li>
</ul>
<br>
<div class="row">
  <div class="col-lg-12">

  </div>

  <div class="col-lg-12">
    <table class="table table-striped table-hover sorted_table" id="usersTable" we-search-field="displayName" we-dataTable-url="/user">
      <thead>
        <tr>
          <th we-model-attr="id">id</th>
          <th we-model-attr="displayName">displayName</th>
          <th we-model-attr="fullName">fullName</th>
          <th we-model-attr="createdAt">createdAt</th>
          <th we-model-attr="createdAt">createdAt</th>
        </tr>
      </thead>
      <tbody>
      {{#each record}}
        <tr>
          <td>{{id}}</td>
          <td>{{displayName}}</td>
          <td>{{fullName}}</td>
          <td>{{we-date createdAt}}</td>
          <td>
            {{we-action-view-btn 'admin.user' this ../req id}}
            {{we-action-edit-btn 'admin.user' this ../req id}}
            {{we-action-delete-btn 'admin.user' this ../req id}}

            {{#link-to 'role.updateUserRoles' id class="btn btn-default"}}
              {{t 'admin.user.roles'}}
            {{/link-to}}
          </td>
        </tr>
      {{/each}}
      </tbody>
      <tfoot>
        <tr>
          <td colspan="5">
            {{paginate count=metadata.count limit=query.limit currentPage=query.page req=req}}
          </td>
        </tr>
      </tfoot>
    </table>
  </div>
</div>