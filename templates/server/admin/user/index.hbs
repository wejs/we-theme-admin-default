<div class="row">
  <div class="col-lg-12">
    <ol class="ember-view breadcrumbs breadcrumb">
      <li class="first current">
        {{#link-to 'admin.index' }}{{t 'home'}}{{/link-to}}
      </li>
    </ol>
  </div>
    <div class="col-lg-12">
      <h1 class="page-header">{{t 'users.title'}}</h1>
    </div>
    <!-- /.col-lg-12 -->

    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <table class="table table-striped table-hover sorted_table" id="usersTable" we-search-field="displayName" we-dataTable-url="/user">
            <thead>
              <tr>
                <th we-model-attr="id">id</th>
                <th we-model-attr="displayName">displayName</th>
                <th we-model-attr="fullName">fullName</th>
                <th we-model-attr="createdAt">createdAt</th>
              </tr>
            </thead>
            <tbody>
            {{#each record}}
              <tr>
                <td>{{id}}</td>
                <td>{{displayName}}</td>
                <td>{{fullName}}</td>
                <td>{{createdAt}}</td>
              </tr>
            {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
</div>
<script type="text/javascript">
  $(document).ready(function() {
    we.components.dataTable('#usersTable');
  });
</script>